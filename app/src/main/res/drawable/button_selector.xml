<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">

        <shape>
            <corners android:radius="15dp" />
            <size android:width="80dp" android:height="80dp" />
            <gradient android:angle="45" android:centerColor="#DAC34A" android:centerX="35%" android:endColor="#E48A46" android:startColor="#F18A70" android:type="linear" />
        </shape>

    </item>


    <item>
        <shape android:shape="rectangle">
            <corners android:radius="15dp" />

            <size android:width="50dp" android:height="50dp" />
            <gradient
                android:angle="45"
                android:centerColor="#DD2C00"
                android:centerX="35%"
                android:endColor="#FF6D00"
                android:startColor="#FFD600"
                android:type="linear" />

            <stroke android:width="1dp"
                android:color="#8B949090"/>
        </shape>
    </item>

</selector>

