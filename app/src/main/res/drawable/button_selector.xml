<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">

        <shape>
            <corners android:radius="15dp" />
            <size android:width="80dp" android:height="80dp" />
            <gradient android:angle="45" android:centerColor="#00CFEA" android:centerX="35%" android:endColor="#8C55DF" android:startColor="#4C72E4" android:type="linear" />
        </shape>

    </item>


    <item>
        <shape android:shape="rectangle">
            <corners android:radius="15dp" />

            <size android:width="50dp" android:height="50dp" />
            <gradient
                android:angle="45"
                android:centerColor="#0600EE"
                android:centerX="35%"
                android:endColor="#B88FF1"
                android:startColor="#D0C7E6"
                android:type="linear" />

            <stroke android:width="1dp"
                android:color="#8B949090"/>
        </shape>
    </item>

</selector>

